<?xml version="1.0" encoding="utf8"?>
<form
	addrulepath="/administrator/components/com_jexchoose/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_JEXCHOOSE_LOCATION_NAME_LABEL"
			description="COM_JEXCHOOSE_LOCATION_NAME_DESC"
			size="80"
			class="inputbox validate-name"			
			required="true"
			default=""
		/>
		<field
			name="link"
			type="text"
			label="COM_JEXCHOOSE_LOCATION_LINK_LABEL"
			description="COM_JEXCHOOSE_LOCATION_LINK_DESC"
			size="80"
			class="inputbox validate-link"			
			default=""
		/>
		<field
			name="logo"
			type="text"
			label="COM_JEXCHOOSE_LOCATION_LOGO_LABEL"
			description="COM_JEXCHOOSE_LOCATION_LOGO_DESC"
			size="80"
			class="inputbox validate-logo"			
			default=""
		/>
		<field
			name="locitem"
			type="locationitem"
			label="COM_JEXCHOOSE_LOCATION_ITEM_LABEL"
			description="COM_JEXCHOOSE_LOCATION_ITEM_DESC"
			default="true"			
		/>
		<field
			name="catid"
			type="category"
			extension="com_jexchoose"
			class="inputbox"
			default=""
			label="COM_JEXCHOOSE_FIELD_CATID_LABEL"
			description="COM_JEXCHOOSE_FIELD_CATID_DESC"			
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>		
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="COM_JEXCHOOSE_PUBLISH_DESC"
			default="0"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>
		</fieldset>
	<fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="show_category"
				type="list"
				label="COM_JEXPRICELIST_JEXPRICELIST_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_JEXPRICELIST_JEXPRICELIST_FIELD_SHOW_CATEGORY_DESC"
				default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</form>